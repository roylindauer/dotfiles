# LINUXY
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
alias h='history | tail'
alias hg='history | grep'
alias l='ls -CFG'
alias la='ls -AG'
alias ll='ls -alFG'
alias lt='ls -altrG' #sort newest last
alias recall='history | grep'
alias n="nvim"

# DOCKER
alias dcp="docker-compose"
alias dps='docker ps --format "table {{.ID}}\t {{.Names}}\t {{.Status}}\t {{.Image}}\t {{.Command}}"'

# GIT
alias gitcleanall='git br --merged | grep -v "\*" | xargs -n 1 git branch -d'
alias gitnuke='git br | grep -v "\*" | xargs -n 1 git branch -D'
alias gitclean='git br --merged | egrep -v "(^\*|master|production|development|develop|qa|staging|main)" | xargs git br -d'
